.weui-search-bar {
  position: fixed;
  padding: 16rpx 20rpx;
  width:100%;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
  z-index: 300;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 18rpx;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 10rpx;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 60rpx;
  padding-right: 60rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 58rpx;
  line-height: 56rpx;
  font-size: 32rpx;
}
.weui-search-bar__cancel-btn {
  font-size: 31rpx;
  margin-left: 20rpx;
  padding:0;
  line-height: 56rpx;
  width:20% !important;
  height: 56rpx;
  color: #5d7599;
  white-space: nowrap; 
}

