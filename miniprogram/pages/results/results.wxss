/* pages/results/results.wxss */
page{
  height: 100%;
}
.cont{
  margin-top: 100rpx;
}
.ttt{
  line-height: 56rpx;
  width:16%;
  height: 56rpx;
}

.com-selectBox{
  width: 86%;
  margin-left: 2rpx;
  z-index: 10;
  height: 56rpx;
}
.ttt image{
  width:30rpx;
  top:16rpx;
  left:50rpx;
}

.com-sContent{
  border: 5rpx solid #e2e2e2;
  background: white;
  font-size: 50rpx;
  position: relative;
  height: 56rpx;
  line-height: 56rpx;
}

.tiaomu{
  font-size:36rpx;
  width: 80%;
  margin:20rpx auto;
}

.weui-search-bar {
  position: fixed;
  padding: 16rpx 20rpx;
  width:100%;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 14rpx;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 10rpx;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 60rpx;
  padding-right: 60rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
}
.weui-search-bar__cancel-btn {
  font-size: 28rpx;
  margin-left: 20rpx;
  padding:0;
  line-height: 56rpx;
  width:20% !important;
  height: 56rpx;
  color: #09BB07;
  white-space: nowrap;
}

