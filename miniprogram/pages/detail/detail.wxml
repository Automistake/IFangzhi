<!--pages/detail/detail.wxml-->
  <view class="title">{{ne.old}}</view>
  <image src="{{p_def}}" bindtap="viewImg" data-imgurl="{{p_def}}"></image>
  <view>对应现代城市：{{ne.now}}</view>
  <view>具体内容：{{ne.info}}</view>
  <view>特色：</view>
  <view wx:if="{{ne.mingren}}">名人：{{ne.mingren}}</view>
  <view wx:if="{{ne.building}}">建筑：{{ne.building}}</view>
  <block wx:if="{{ne.relation}}">
    <text>关联地区：</text>
    <text wx:for="{{ne.relation}}" bindtap="jumprelation" data-name="{{item}}">{{item}}</text>
  </block>



