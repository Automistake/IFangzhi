/* pages/detail/detail.wxss */  
page{
  height: 100%;
  width: 90%;
  margin:0 auto;
}

.title{
  text-indent: 25rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  font-size: 50rpx;
  font-weight:bold;
  height: 8%;
  border-left-style: solid ;
  border-left-width: 10rpx;
  border-left-color: #376495;
  background-color: #D9E5F2;
}

.pic{
  margin-bottom: 40rpx;
  padding: auto;
  width: 640rpx;
  height: 480rpx;
  border: 2rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  align-items: center;
  justify-content: center;
  display: flex;
}


.text{
  margin-top: 20rpx;
  text-indent: 56rpx;
  font-size: 28rpx;
  margin-bottom: 55rpx;
  letter-spacing: 3rpx;
}



.t1{
    text-indent: 15rpx;
    font-size: 35rpx;
    letter-spacing: 2rpx;
    margin-bottom: 8rpx;
    margin-top: 8rpx;
    background-color: #D9E5F2;
    border-left-style: solid ;
    border-left-width: 10rpx;
    border-left-color: rgb(241, 241, 241);  
}

.container{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.divLine{
  background-color: rgb(241, 241, 241);
  width: 100%;
  height: 5rpx;
 }

.relation{
  color:#D9E5F2;
  margin-top: 20rpx;
  margin-left: 56rpx;
  font-size: 26rpx;
  /* letter-spacing: 3rpx; */
  /* text-decoration: underline; */
  margin-bottom: 40rpx;
}

.tip{
  width: 80%;
  margin:0 auto;
  text-align: center;
  font-size:26rpx;
  color:#C0C0C0;
}
.relurl{
  padding:6rpx;
